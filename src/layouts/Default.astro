---
import { ViewTransitions } from "astro:transitions";
import type { ComponentProps } from "astro/types";
import Fonts from "#/components/Fonts.astro";
import LoaderSVG from "#/components/LoaderSVG.astro";
import Base from "#/layouts/Base.astro";
import "#/layouts/styles/default.css";

type Props = {
	title?: string;
	description?: string;
	class?: string;
	options?: {
		viewTransitions?: boolean;
		type?: ComponentProps<typeof LoaderSVG>["type"];
	};
};
const {
	title,
	description,
	class: className,
	options = {
		viewTransitions: true,
	},
}: Props = Astro.props;
---

<Base title={title} description={description} class={className}>
  {options.viewTransitions !== false && <ViewTransitions slot="head" />}
  <Fonts slot="head" />
  <LoaderSVG slot="header" />
  <slot name="head" slot="head" />
  <slot name="header" slot="header" />
  <slot name="footer" slot="footer" />
  <slot />
</Base>
