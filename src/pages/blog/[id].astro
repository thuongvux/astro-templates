---
export const prerender = false;
import Default from "#/layouts/Default.astro";

const id = Astro.params.id;
const res = await fetch(`https://jsonplaceholder.typicode.com/posts/${id}`);
const post: { id: string; title: string; body: string } = await res.json();
---

<Default title="Welcome to my place">
  <h1>Hello, {Astro.url.pathname}</h1>
  <h2>{post.title}</h2>
  <p>{post.body}</p>
</Default>
